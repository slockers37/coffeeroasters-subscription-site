---
import type { number } from "astro/zod";
import { Image } from "astro:assets";

interface Props {
  countryIllustration: string;
  alt: string;
  countryName: string;
  street: string;
  state: string;
  extra: string;
  phone: string;
  width: number;
  height: number;
}

const { countryIllustration, alt, countryName, street, state, extra, phone, width, height } =
  Astro.props;
---

<div class="flex flex-col items-center gap-12 text-dark-grey-blue">
  <Image src={countryIllustration} alt={alt} width={width} height={height} />
  <div>
  <h3 class="mb-6 font-serif text-3xl">{countryName}</h3>
  <p>{street}</p>
  <p>{state}</p>
  <p>{extra}</p>
  <p>{phone}</p>
    </div>
</div>
